---
interface Props {
	title: string;
	body: string;
	href?: string;
}
const { href, title, body } = Astro.props;
---
	<div class="max-w-sm bg-white border hover:bg-slate-300 border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
		<a {href}>
			<img class="rounded-t-lg" src="https://placehold.jp/36a234/ffffff/400x200.png?text=IMAGEN%20PROYECTO&css=%7B%22border-radius%22%3A%2215px%22%2C%22background%22%3A%22%20-webkit-gradient(linear%2C%20left%20top%2C%20left%20bottom%2C%20from(%23666666)%2C%20to(%23cccccc))%22%7D" alt="PREVIEW PROYECTO" />
		</a>
		<div class="p-5">
			<a href="#">
				<h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
					{title}
				</h5>
			</a>
			<p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
				{body}
			</p>
			<a
			href="#"
			class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
			>
			Leer m√°s
			<svg
			class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
			aria-hidden="true"
			xmlns="http://www.w3.org/2000/svg"
			fill="none"
			viewBox="0 0 14 10"
			>
			<path
			stroke="currentColor"
			stroke-linecap="round"
			stroke-linejoin="round"
			stroke-width="2"
			d="M1 5h12m0 0L9 1m4 4L9 9"
			/>
		</svg>
	</a>
</div>
</div>
